.container.div(ng-controller='ContentCtrl', ng-bind='findarticle()')
	.span7.row
		.item-title
			h2 {{item.title}}
			span(class='item-day', style='font-size:150%') {{item.day}}
			span(class='item-month') {{item.month}}
		div(class='well well-large')
			h3 some image
		div(class='item-content')
			{{item.content}}
	.span4.row
		div(class='well well-large')
			h4 Author:  {{detail.author}}
			h4 Source:  {{detail.source}}
			h4 Date:  {{detail.date}}
			h4 Twitter:  {{detail.twitter}}
			h4 Website:  {{detail.website}}
		div(class='well well-large')
			div(class='social-site-links')
			h3 how useful was this content
			span(class='rating-stars')  400 votes
		div(ng-model='chatterbox', class='well well-large', style='height:200px;display:table-cell;vertical-align:bottom;')
			form(ng-submit='addComment')
				input(type='text', placeholder='add comment. . .', ng-model='text', style='margin-bottom:-30px;align:center;width:240px;')
		div(class='well well-large')
pre
	{{ sexp(rp) }}


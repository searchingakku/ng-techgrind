html
	.main.div(id='main')
		.main-inner
			.container
				.row
					.span8
						.widget
							.widget-content
								tabset(style='font-color:red')
									tab(heading='News')
										div(ng-include="'partials/news.html'")
									tab(ng-repeat='tab in tabs', heading='{{tab.title}}', active='tab.active', disabled='tab.disabled') 
										div
											ul(class='items')
												li(ng-repeat='item in regionblog[tab.title]')
													a(href='#/{{item.tab}}/{{item.articlename}}', style='text-decoration:none;') {{item.title}}
													div(class='item-detail', id='topcontent', ng-click='toggle=!toggle')
														div(class='item-title')
															h3 {{item.title}}
														div(class='item-date')
															span.offset9(class='item-day', style='font-size:200%') {{item.day}}
															span(class='item-month') {{item.month}}
														p(ng-class='{showall:toggle,showless:!toggle}', class='item-preview', ng-bind-html-unsafe='item.content')
														p(align='left', ng-show='!toggle')
															a(href='#/{{item.url||"empty"}}', style='text-decoration:none;') click to expand
									tab(heading='Calendar', select='rendercal()')
										div#calendar(calendar="rp.region", region="rp")
									div(ng-hide='editable')
										.btn(style='float:right;', ng-click='editable=!editable') Edit items
									div(ng-show='editable')
										div(class='list1', droppable)
											div(class='btn btn-info btn-block', ng-repeat='tab in list1', data-index='$index', data-reject='{{tab.reject}}', draggable) {{ tab.name }}
										div(class='list2', droppable)
											div(class='btn btn-info btn-block', ng-repeat='tab in list2', data-index='$index', data-reject='{{tab.reject}}', draggable) {{ tab.name }}
										.btn(style='float:right;', ng-click='editable=!editable') Done


					.span4
						.div(class='widget widget-nopad')
							.widget-header
								i.icon-list-alt
								span.break Techgrind {{articles.country}}
							.widget-content
								center
									table(class='table table-hover table-striped')
										tbody(ng-repeat='profile in profiles')
											tr
												th
													i(class='{{profile.icon}}') &nbsp;
													em {{profile.role}}
											tr(ng-repeat='detail in regionprofile[profile.type]')
												td {{detail.name}}
												td {{detail.mail}}
